.container 
  width 375px
  height 667px
  position fixed
  margin auto
  top 50%
  margin-top -333px
  left 50%
  margin-left -187px
  background #0074ae
  border-radius 10px
  overflow hidden
  text-align center
  color white

  &.size
    .toppings
      transform translateX(200%)

  &.toppings
    .toppings
      transform translateX(0%)
      
    .sizeselector
      transform translateX(-100%)
  
  &.extras
    .toppings, .sizeselector
      transform translateX(-100%)

    .extras 
      transform translateX(0%)

    .pizza
      height 80px
      width 80px
      left 20px
      top 30px
      margin 0
      transform scale(1,1)

.serving-amount
  position absolute
  bottom 70px
  left 0px
  width 100%
  text-align center

