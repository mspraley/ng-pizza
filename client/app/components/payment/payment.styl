.payment
  background #016699
  width 100%
  position absolute
  bottom 0
  left 0
  transition all cubic-bezier(.87,-.41,.19,1.44) 0.3s
  box-sizing border-box
  height 50px

.pay-now-btn
  height 50px
  color #bbddff
  text-align right
  width 100%
  padding-right 20px
  box-sizing border-box
  line-height 50px

.select-card-label 
  width: 100%
  text-align: center
  color white
  margin-top 20px

.card-selector-wrapper 
  overflow scroll

.card-selector 
  width 200%
  height 300px

.card-container 
  width 50%
  height 200px
  float left
  display block

.card 
  width 300px
  height 200px
  border-radius: 15px
  background: #999999;
  margin auto
  margin-top 10px
  font-family card
  font-weight light
  position relative
  color white
  letter-spacing 3px
  box-shadow 2px 2px 5px #222222
  text-shadow: 1px 1px #444444
  transition all cubic-bezier(.87,-.41,.19,1.44) 0.3s
  
.card-chip
  position absolute
  left 10%
  top 10%
  width 40px
  height 40px
  border-radius 5px
  background: #fceabb; 
  background: -webkit-linear-gradient(to left, #fceabb , #f8b500); /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to left, #fceabb , #f8b500); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

.card-number 
  font-size 22px
  font-weight light
  color white
  position absolute
  top 40%
  left 10%
  word-spacing 9px
  transition all cubic-bezier(.87,-.41,.19,1.44) 0.3s

.card-name
  position absolute
  bottom 30%
  left 10%
  transition all cubic-bezier(.87,-.41,.19,1.44) 0.3s

.expiration-container 
  position absolute
  left 10%
  bottom 8%

.valid-thru
  font-size 9px
  margin-bottom 5px

.payment-status
  position absolute
  width 100%
  color white
  text-transform uppercase
  text-align center
  top 5%
  z-index 200
  display none

.checkmark
  margin-top 20px
  display:inline-block;
  &:after 
    content: '';
    display: block;

    width: 35px;
    height: 60px;

    border: solid #016699;
    border-width: 0 3px 3px 0;

    transform: rotate(45deg);

.checkmark-container 
  width 130px
  height 130px
  background white
  position absolute
  top 50%
  left 50%
  margin-left -60px
  margin-top -80px
  border-radius 50%
  z-index 300
  text-align center  
  transition all cubic-bezier(.87,-.41,.19,1.44) 0.3s
  transform scale(0,0)


.loader-container 
  position absolute
  left 50%
  margin-left -5em
  z-index 100
  width 0px
  height 0px
  margin-top 20px
  overflow hidden
  transition all cubic-bezier(.87,-.41,.19,1.44) 0.3s

.loader,
.loader:before,
.loader:after 
  border-radius: 50%;

.loader:before,
.loader:after 
  position: absolute;
  content: '';

.loader:before 
  width: 5.2em;
  height: 10.2em;
  background: #76b852;
  border-radius: 10.2em 0 0 10.2em;
  top: -0.1em;
  left: -0.1em;
  -webkit-transform-origin: 5.2em 5.1em;
  transform-origin: 5.2em 5.1em;
  -webkit-animation: load2 2s infinite ease 1.5s;
  animation: load2 2s infinite ease 1.5s;

.loader 
  color: #ffffff;
  font-size: 11px;
  text-indent: -99999em;
  margin: 55px auto;
  position: relative;
  width: 10em;
  height: 10em;
  box-shadow: inset 0 0 0 1em;
  -webkit-transform: translateZ(0);
  -ms-transform: translateZ(0);
  transform: translateZ(0);

.loader:after 
  width: 5.2em;
  height: 10.2em;
  background: #76b852;
  border-radius: 0 10.2em 10.2em 0;
  top: -0.1em;
  left: 5.1em;
  -webkit-transform-origin: 0px 5.1em;
  transform-origin: 0px 5.1em;
  -webkit-animation: load2 2s infinite ease;
  animation: load2 2s infinite ease;

@-webkit-keyframes load2 
  0% 
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  
  100% 
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  

@keyframes load2 
  0% 
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  
  100% 
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
