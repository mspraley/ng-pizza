.pizzabox
  color red

.box-container 
  width 200px
  height 200px
  margin auto
  position relative
  transition all cubic-bezier(.87,-.41,.19,1.44) 0.3s
  margin-top 80px

.box-top  
  position relative
  z-index 10
  width 100%
  height 100%

.box-main
  width 100%
  height 80%
  background white
  position absolute
  left 0
  top 20%
  border-bottom-left-radius: 10px
  border-bottom-right-radius: 10px

.box-upper-flap 
  position absolute
  width 30%
  left 50%
  margin-left -15%
  background white
  height 10%
  top -10px
  border-radius 10px

.box-upper-left-corner
  height 28%
  width 20%
  position absolute
  left 7%
  top 3%
  background white
  transform: rotate(45deg)

.box-upper-right-corner
  height 28%
  width 28%
  position absolute
  right 6%
  top 6%
  background white
  transform: rotate(45deg)

.box-upper 
  height 20%
  width 60%
  position absolute
  left 50%
  margin-left -30%
  top 0%
  background white

.box-inside
  width 100%
  height 70%
  padding 5px
  position absolute
  left -7px
  border 2px solid #938872
  top 20%
  background #7c5431
  z-index: 5
  border-radius 50px

.flap 
  width 30%
  height 20%
  border-radius 40%
  background white
  position absolute
  &.top-left
    top 30%
    left -4%
  &.bottom-left
    bottom 12%
    left -4%
  &.top-right
    top 30%
    right -4%
  &.bottom-right
    bottom 12%
    right -4%

.box-inside-top
  position absolute
  width 60%
  margin-left -30%
  top -8px
  left 50%
  height 20px
  background #7c5431
  border-top 3px solid #938872
  border-radius 15px

.box-logo
  position absolute
  width 20%
  height 45%
  left 50%
  margin-left -10%
  top 50%
  margin-top -22%
  border-radius: 10px
  overflow hidden
  transform rotate(45deg)

.logo-top 
  width 100%
  height 50%
  background #d72228

.logo-bottom
  width 100%
  height 50%
  margin-top 5px
  background #0074ae




