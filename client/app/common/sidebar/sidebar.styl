.sidebar
  width 15%
  position absolute
  left 0
  top 100px

.sidebar-list
  color #7fc98a
  padding 20px
  text-align right
  
  
li 
  padding 15px
  text-transform uppercase
  font-size 12px
  transition: padding ease-in 0.3s;
  cursor pointer
  opacity: 0.4
  border-right: 5px solid #3e3e3e

  &:hover
    border-right: 5px solid #7fc98a
    opacity 1

  &.active
    border-right: 5px solid #7fc98a
    opacity 1

